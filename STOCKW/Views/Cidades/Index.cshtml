@model IEnumerable<STOCKW.Models.Dominio.Cidade>

@{
    ViewData["Title"] = "Pessoas";
}

<h1>Pessoas</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UF)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UF)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.ID_Cidade">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.ID_Cidade">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.ID_Cidade">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
